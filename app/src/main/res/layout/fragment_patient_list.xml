<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PatientListFragment">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:text="Enter Patient Info:"
        />

    <EditText
        android:id="@+id/Searchcustomer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="0dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="18sp"
        android:hint="Enter name, or date of birth"
        android:background="@color/colorPrimary"

        />

    <Button
        android:id="@+id/searchthis"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:text="search"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="18sp"
        android:text="Patients:"
        />

    <TextView
        android:id="@+id/noofferings"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="0dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/searchlist"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:inputType="text"
        android:dividerHeight="4dp"

        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listcustomers"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:inputType="text"
        android:dividerHeight="4dp"
        />

    </LinearLayout>



</FrameLayout>