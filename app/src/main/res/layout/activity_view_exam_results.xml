<?xml version="1.0" encoding="utf-8"?>


<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray">

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:text="Name:"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/patient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Patient Name"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:text="Phone Number:"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"
                    android:text="Patient Phone Number"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:text="Date of Birth:"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:text="Patient DOB"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:text="Date of Exam:"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/exam_date"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:text="Patient DOB"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:text="Examiner:"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

                <TextView
                    android:id="@+id/examiner"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="6dp"
                    android:textSize="16sp"
                    android:text="Patient DOB"
                    android:fontFamily="@font/roboto_light"
                    android:textColor="@color/colorPrimary"
                    android:background="@color/white"
                    />

            </LinearLayout>


        <TextView
            android:id="@+id/left_macula_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Macula"
            android:textColor="@color/colorPrimary"
            android:textSize="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="left"
            android:gravity="left"/>

        <ImageView
            android:id="@+id/left_macula_image"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_margin="15dp"/>

            <TextView
                android:id="@+id/left_optic_nerve_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Left Optic Nerve"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="left"
                android:gravity="left"/>

            <ImageView
                android:id="@+id/left_optic_nerve_image"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_margin="15dp"/>



            <Button
                android:id="@+id/complete_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="16sp"
                android:text="Complete"
                android:background="@color/colorAccent"
                />

        </LinearLayout>




</ScrollView>

