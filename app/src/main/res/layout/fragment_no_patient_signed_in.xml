<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.NoPatientSignedInFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Patient Signed In" />

        <Button
            android:id="@+id/patient_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search for Existing Patient"/>

        <Button
            android:id="@+id/new_patient_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create New Patient"/>
    </LinearLayout>

</FrameLayout>